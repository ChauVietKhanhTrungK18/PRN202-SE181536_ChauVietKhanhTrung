<Window x:Class="BaiTapCoBan1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BaiTapCoBan1"
        mc:Ignorable="d"
        Title="SE181536_ChauVietkhanhTrung_Tổng 2 số" Height="200" Width="300" WindowStartupLocation="CenterScreen">
    <StackPanel>
        <Label Target="{Binding ElementName=txtA}" Content="Hệ số _a:" HorizontalAlignment="Left" />
        <TextBox x:Name="txtA" TextWrapping="Wrap" Text="" />
        <Label Target="{Binding ElementName=txtB}" Content="Hệ số _b:"/>
        <TextBox x:Name="txtB" TextWrapping="Wrap" Text=""/>
        <TextBlock TextWrapping="Wrap" Text="Kết quả:"/>
        <TextBlock x:Name="tbKetQua" Background="Yellow"/>
        <StackPanel  Orientation="Horizontal">
            <Button x:Name="btnTong" Width="100" Margin="10" 
                    Click="BtnTong_Click">
                <StackPanel Orientation="Horizontal">
                    <Image
                        Source="/Images/sum.png" Height="30" Width="30"/>
                    <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center"><Run Text="Tổng"/></TextBlock>
                </StackPanel>
            </Button>
            <Button x:Name="btnThoat" Width="100" Margin="10"
                    Click="BtnThoat_Click">
                <StackPanel Orientation="Horizontal">
                    <Image
                        Source="/Images/thoat.png" Height="30" Width="30"/>
                    <TextBlock Margin="5,0" VerticalAlignment="Center"><Run Text="Thoát"/></TextBlock>
                </StackPanel>
            </Button>
        </StackPanel>
    </StackPanel>
</Window>
